{% schema %}
{
  "name": "Custom image with text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Vegan Goodness You Can Taste"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Elevate every meal with natural, bold spices crafted for clean, delicious cooking."
    },
    {
      "type": "text",
      "id": "feature1",
      "label": "Feature 1",
      "default": "üå± Pure, natural, and vegan-friendly spices"
    },
    {
      "type": "text",
      "id": "feature2",
      "label": "Feature 2",
      "default": "üßë‚Äçüç≥ Crafted to enhance plant-based dishes"
    },
    {
      "type": "text",
      "id": "feature3",
      "label": "Feature 3",
      "default": "üå∂Ô∏è Bold flavors with no animal products"
    },
    {
      "type": "text",
      "id": "feature4",
      "label": "Feature 4",
      "default": "üåø Organic ingredients for clean cooking"
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image3",
      "label": "Image 3"
    },
    {
      "type": "image_picker",
      "id": "image4",
      "label": "Image 4"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Custom image with text",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<section class="vegan-section">
  <div class="vegan-container">
    <!-- Left Content -->
    <div class="vegan-text">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.description }}</p>

      <ul class="vegan-features">
        {% if section.settings.feature1 != blank %}
          <li>{{ section.settings.feature1 }}</li>
        {% endif %}
        {% if section.settings.feature2 != blank %}
          <li>{{ section.settings.feature2 }}</li>
        {% endif %}
        {% if section.settings.feature3 != blank %}
          <li>{{ section.settings.feature3 }}</li>
        {% endif %}
        {% if section.settings.feature4 != blank %}
          <li>{{ section.settings.feature4 }}</li>
        {% endif %}
      </ul>

      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="shop-btn">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>

    <!-- Right Images -->
    <div class="vegan-images">
      {% if section.settings.image1 != blank %}
        <img src="{{ section.settings.image1 | image_url: width: 600 }}" alt="Recipe 1">
      {% endif %}
      {% if section.settings.image2 != blank %}
        <img src="{{ section.settings.image2 | image_url: width: 600 }}" alt="Recipe 2">
      {% endif %}
      {% if section.settings.image3 != blank %}
        <img src="{{ section.settings.image3 | image_url: width: 600 }}" alt="Recipe 3">
      {% endif %}
      {% if section.settings.image4 != blank %}
        <img src="{{ section.settings.image4 | image_url: width: 600 }}" alt="Recipe 4">
      {% endif %}
    </div>
  </div>
</section>

<style>
.vegan-section {
  background-color: #F5EBCE;
  padding: 70px 20px;
}

.vegan-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  margin: 0 auto;
  gap: 40px;
  align-items: center;
  max-width: 1420px;
}

.vegan-text h2 {
  font-size: 32px;
  margin-bottom: 15px;
  color: #000;
}

.vegan-text p {
  font-size: 16px;
  margin-bottom: 20px;
  color: #333;
  line-height: 1.6;
}

.vegan-features {
  list-style: none;
  padding: 0;
  margin: 0 0 25px;
}

.vegan-features li {
  margin-bottom: 12px;
  font-size: 16px;
  color: #222;
  display: flex;
  align-items: center;
}

.shop-btn {
  display: inline-block;
  background-color: #b72b26;
  color: #fff;
  padding: 12px 28px;
  border-radius: 6px;
  font-size: 16px;
  font-weight: 500;
  text-decoration: none;
  transition: background-color 0.3s ease;
}

.shop-btn:hover {
  background-color: #8d1f1b;
}

/* Right image grid */
.vegan-images {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15px;
}

.vegan-images img {
  width: 100%;
  border-radius: 8px;
  object-fit: cover;
  max-height: 230px;
}

/* Responsive */
@media (max-width: 992px) {
  .vegan-container {
    grid-template-columns: 1fr;
    text-align: center;
  }
  .vegan-images {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 600px) {
  .vegan-images {
    grid-template-columns: 1fr;
  }
}
</style>
